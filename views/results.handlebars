<br>

<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        {{resultCount}} results were returned for "{{searchTerm}}".
      </h1>
      <h2 class="subtitle">

      </h2>
    </div>
  </div>
</section>

<br>

<div class="tile is-ancestor">
  {{#each results}}
    <div class="tile is-parent">
      <article class="tile is-child box">
        <a class="title" href={{plantSearch name}}>{{name}}</a>
        <figure class="image is-4by3">
          <img src={{plantImg image}}>
        </figure>
      </article>
    </div>
  {{/each}}
</div>